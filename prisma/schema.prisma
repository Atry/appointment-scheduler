generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator nexusPrisma {
  provider = "nexus-prisma"
}

model Doctor {
  id           Int                @id @default(autoincrement())
  name         String
  workingTime  DailyWorkingTime[]
  appointments Appointment[]
  timeZone     String
}

model DailyWorkingTime {
  /// For which day-of-week this DailyWorkingTime describes
  /// 0 for Sunday, 1 for Monday, etc.
  dayOfWeek Int

  doctor   Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  doctorId Int

  /// The time that the doctor starts to work, in HH:mm:ss.SSS format
  ///
  /// Note that it represents the clock time without date part, not the offset from
  /// midnight, because storing the offset would result supprising behavior when
  /// shifting daylight saving time, e.g. 2023-03-12 midnight plus 10 hours might
  /// not be 10 a.m.
  startTime String

  /// The time that the doctor stops to work, in HH:mm:ss.SSS format
  endTime String

  @@unique([doctorId, dayOfWeek])
}

model Appointment {
  id Int @id @default(autoincrement())

  doctor   Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  doctorId Int

  startDateTime DateTime
  endDateTime   DateTime
}
